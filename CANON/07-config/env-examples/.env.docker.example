# Docker Environment Configuration
# Source: Legal-Buddy-AI (adapted, all secrets replaced with placeholders)

# ============================================================
# DOCKER COMPOSE SETTINGS
# ============================================================

COMPOSE_PROJECT_NAME=your-app
COMPOSE_FILE=docker-compose.yml

# ============================================================
# APPLICATION SERVICE
# ============================================================

APP_IMAGE=your-app:latest
APP_PORT=3000
APP_REPLICAS=1

# ============================================================
# DATABASE SERVICE
# ============================================================

# PostgreSQL
POSTGRES_VERSION=15-alpine
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=appdb
POSTGRES_USER=appuser
POSTGRES_PASSWORD=CHANGE_THIS_POSTGRES_PASSWORD
POSTGRES_DATA_PATH=./data/postgres

# MySQL (alternative)
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=CHANGE_THIS_MYSQL_ROOT_PASSWORD
MYSQL_DATABASE=appdb
MYSQL_USER=appuser
MYSQL_PASSWORD=CHANGE_THIS_MYSQL_PASSWORD

# ============================================================
# REDIS SERVICE
# ============================================================

REDIS_VERSION=7-alpine
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DATA_PATH=./data/redis

# ============================================================
# NGINX SERVICE
# ============================================================

NGINX_VERSION=alpine
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_CONF_PATH=./nginx/nginx.conf
NGINX_SSL_CERT_PATH=./ssl/cert.pem
NGINX_SSL_KEY_PATH=./ssl/key.pem

# ============================================================
# MONITORING
# ============================================================

# Prometheus
PROMETHEUS_VERSION=latest
PROMETHEUS_PORT=9090
PROMETHEUS_DATA_PATH=./data/prometheus

# Grafana
GRAFANA_VERSION=latest
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
GRAFANA_DATA_PATH=./data/grafana

# ============================================================
# VOLUMES & NETWORKS
# ============================================================

VOLUME_DRIVER=local
NETWORK_DRIVER=bridge

# ============================================================
# ENVIRONMENT SPECIFIC
# ============================================================

# Development
DEV_AUTO_RELOAD=true
DEV_DEBUG_MODE=true

# Production
PROD_WORKERS=4
PROD_THREADS=2

# ============================================================
# BACKUP
# ============================================================

BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# ============================================================
# SECURITY
# ============================================================

# SSL/TLS
SSL_ENABLED=false  # Set to true in production
SSL_AUTO_RENEW=false

# Firewall
ALLOWED_IPS=0.0.0.0/0  # Restrict in production

# ============================================================
# NOTES
# ============================================================

# IMPORTANT:
# 1. Copy this file to .env.docker and update with actual values
# 2. Never commit .env.docker to version control
# 3. Use strong passwords in production
# 4. Enable SSL/TLS in production
# 5. Restrict network access appropriately
# 6. Regularly update container images
# 7. Monitor resource usage and scale as needed
