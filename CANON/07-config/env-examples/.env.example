# Application Configuration Template
# Source: Legal-Buddy-AI (adapted, all secrets replaced with placeholders)

# ============================================================
# APPLICATION SETTINGS
# ============================================================

APP_NAME="Your Application Name"
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000
APP_VERSION=1.0.0

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_SSL_MODE=prefer  # disable, allow, prefer, require

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=10000

# ============================================================
# AUTHENTICATION & SECURITY
# ============================================================

# JWT Settings
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=1h  # Token expiration (e.g., 1h, 7d, 30d)
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_KEY_HERE
JWT_REFRESH_EXPIRATION=7d

# Session Settings
SESSION_SECRET=YOUR_SESSION_SECRET_KEY_HERE
SESSION_TIMEOUT=3600  # Session timeout in seconds
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# AI SERVICES
# ============================================================

# OpenAI
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_API_KEY_HERE
OPENAI_ORG_ID=org-YOUR_ORGANIZATION_ID_HERE  # Optional
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google Gemini
GEMINI_API_KEY=AIzaSy_YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2048

# ============================================================
# EMAIL CONFIGURATION
# ============================================================

# SMTP Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false  # Use TLS
SMTP_USER=your-email@example.com
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
SMTP_FROM_NAME="Your Application"
SMTP_FROM_EMAIL=noreply@example.com

# SendGrid (alternative)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY_HERE

# ============================================================
# CLOUD STORAGE
# ============================================================

# AWS S3
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Google Cloud Storage
GCS_PROJECT_ID=your-project-id
GCS_KEYFILE_PATH=/path/to/keyfile.json
GCS_BUCKET=your-bucket-name

# ============================================================
# EXTERNAL APIS
# ============================================================

# Google Maps
GOOGLE_MAPS_API_KEY=AIzaSy_YOUR_GOOGLE_MAPS_API_KEY_HERE

# Stripe (Payment Processing)
STRIPE_PUBLIC_KEY=pk_test_YOUR_STRIPE_PUBLIC_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Other APIs
EXTERNAL_API_KEY=YOUR_EXTERNAL_API_KEY_HERE
EXTERNAL_API_URL=https://api.example.com

# ============================================================
# REDIS (Caching & Sessions)
# ============================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE  # Leave empty if no password
REDIS_DB=0
REDIS_TTL=3600  # Default TTL in seconds

# ============================================================
# LOGGING & MONITORING
# ============================================================

# Logging
LOG_LEVEL=info  # error, warn, info, debug
LOG_FILE=/var/log/app/application.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Sentry (Error Tracking)
SENTRY_DSN=https://YOUR_SENTRY_DSN_HERE@sentry.io/PROJECT_ID

# Analytics
GOOGLE_ANALYTICS_ID=UA-YOUR_ANALYTICS_ID_HERE

# ============================================================
# CORS & SECURITY HEADERS
# ============================================================

CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000

# ============================================================
# FILE UPLOAD
# ============================================================

UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_PATH=/uploads

# ============================================================
# WEBHOOKS
# ============================================================

WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_KEY_HERE
WEBHOOK_URL=https://yourapp.com/webhooks

# ============================================================
# DEVELOPMENT TOOLS
# ============================================================

# Development mode settings
DEV_MOCK_EMAIL=true
DEV_MOCK_SMS=true
DEV_SKIP_AUTH=false

# ============================================================
# FEATURE FLAGS
# ============================================================

FEATURE_AI_ENABLED=true
FEATURE_MAPS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_BETA_FEATURES=false

# ============================================================
# BACKGROUND JOBS
# ============================================================

# Job Queue
QUEUE_DRIVER=redis  # redis, database, sync
QUEUE_CONNECTION=default
QUEUE_RETRY_AFTER=90

# Scheduler
SCHEDULER_ENABLED=true

# ============================================================
# NOTES
# ============================================================

# IMPORTANT:
# 1. Never commit this file with actual secrets to version control
# 2. Copy this file to .env and fill in actual values
# 3. Add .env to .gitignore
# 4. Use strong, unique passwords and keys
# 5. Rotate secrets regularly
# 6. Use different values for development, staging, and production
# 7. Consider using a secret management service (AWS Secrets Manager, HashiCorp Vault, etc.)
